<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txRacaAnimais"
            android:id="@+id/ivFotoAnimais"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lipi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/txRacaAnimais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pitbull"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFotoAnimais"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txTipoAnimais"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/txTipoAnimais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Niveis de cuidado"
            app:layout_constraintTop_toBottomOf="@id/txRacaAnimais"
            app:layout_constraintStart_toEndOf="@id/ivFotoAnimais"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txCaracteristicaAnimais"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/txCaracteristicaAnimais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Caracteristica"
            app:layout_constraintTop_toBottomOf="@id/txTipoAnimais"
            app:layout_constraintStart_toEndOf="@id/ivFotoAnimais"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>